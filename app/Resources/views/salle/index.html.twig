{% extends 'base.html.twig' %}

{% block body %}
<div class= "container shadow col-5">
   <div class="container bg-info text-light col-6">
    <h1>Salles list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nbplace</th>
                <th>Numero</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salle in salles %}
            <tr>
                <td><a href="{{ path('salle_show', { 'id': salle.id }) }}">{{ salle.id }}</a></td>
                <td>{{ salle.nbplace }}</td>
                <td>{{ salle.numero }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('salle_show', { 'id': salle.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('salle_edit', { 'id': salle.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('salle_new') }}">Create a new salle</a>
        </li>
    </ul>
      </div>
    </div>
{% endblock %}
